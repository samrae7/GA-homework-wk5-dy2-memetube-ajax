<form id='new-video-form' action="/videos" method="post">
  
  <fieldset>

    <ul>
      <li>
          <label for="title">Title</label>
          <input type="text" id="title" name="title" size='30'>
        </li>
      <li>
          <label for="description">Description:</label>
          <input type="text" size='30' id="description" name="description">
       </li>
      <li>
          <label for="genre">Genre:</label>
          <input type="text" size='30' id="genre" name="genre">
        </li>
      <li>
         <label for="url">URL:</label>
         <input type="text" size='30' id="url" name="url">
       </li>
    </ul>

    <button class='new-edit' type="submit">Add video</button>

  </fieldset>

</form>


